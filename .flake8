[flake8]
# Flake8 configuration for LLM training framework

max-line-length = 127
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    env,
    .venv,
    .pytest_cache,
    .mypy_cache

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501

# Per-file ignores
per-file-ignores =
    __init__.py:F401

# Show source code for errors
show-source = True
statistics = True
